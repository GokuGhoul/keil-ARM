;WITHOUT MEMORY MAP :
	AREA PROGRAM,CODE,READONLY
ENTRY
	LDR R1,VALUE1 ;3
	LDR R2,VALUE2 ;
	MOV R3,#0X0000 ; INTIAL COUNTER
	MOV R4,#0X00 ; ANSWER
LOOP
	ADDS R4,R4,R1
	ADDS R3,R3,#1
	CMP R3,R2
	BNE LOOP
	AREA PROGRAM,DATA,READONLY
VALUE1 DCD &00000003
VALUE2 DCD &0000000A
	END
